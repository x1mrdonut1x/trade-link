{
  "name": "tradelink",
  "private": true,
  "scripts": {
    "build:ui": "pnpm --filter web build",
    "start:ui": "pnpm --filter web dev",
    "start:api": "pnpm --filter api start:dev",
    "start": "pnpm run start:web & pnpm run start:api",
    "build": "pnpm run build:shared && pnpm --filter api build && pnpm --filter web build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
