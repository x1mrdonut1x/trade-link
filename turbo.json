{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["@tradelink/api#db:generate", "^build"],
      "outputs": ["dist/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["DATABASE_URL", "ALLOWED_ORIGINS"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["@tradelink/api#db:generate", "@tradelink/shared#build"],
      "cache": false,
      "persistent": true,
      "interruptible": true
    },
    "db:generate": {
      "cache": true
    },
    "db:migrate": {
      "cache": true,
      "inputs": ["prisma/schema.prisma", "prisma/migrations/**"],
      "env": ["DATABASE_URL"]
    },
    "db:deploy": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:studio": {
      "cache": false
    },
    "build:api": {
      "dependsOn": ["@tradelink/api#db:generate", "@tradelink/shared#build", "@tradelink/api#build"],
      "cache": false,
      "env": ["DATABASE_URL", "ALLOWED_ORIGINS"]
    },
    "start:api": {
      "cache": false
    },
    "build:web": {
      "dependsOn": ["@tradelink/web#build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["@tradelink/api#db:generate", "@tradelink/api#db:migrate", "@tradelink/shared#build"],
      "cache": false,
      "env": ["DATABASE_URL", "NODE_ENV"]
    }
  }
}
